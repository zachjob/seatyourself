<% @reservation.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for([restaurant, reservation]) do |f| %>
  <p>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.label :time %>
    <%= f.time_field :time %>
  </p>

  <p>
    <%= f.label :party_size %>
    <%= f.select(:party_size, (restaurant.min_seating..restaurant.max_seating).to_a) %>
  </p>

  <p class="submit">
    <%= f.submit %>
  </p>
<% end %>
